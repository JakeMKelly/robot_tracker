<div class='container'>
<h3>Sign up</h3>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @user do |f| %>
        <%= f.label "Username" %>
        <%= f.text_field :username, class: 'form-control' %>
        <%= f.label "email" %>
        <%= f.email_field :email, class: 'form-control' %>
        <%= f.label "Password" %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.submit "Save changes", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
